<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.priyanka.SmartCitizen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.priyanka.SmartCitizen.utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.priyanka.SmartCitizen.activity.SignupActivity" />
        <activity
            android:name="com.example.priyanka.SmartCitizen.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.priyanka.SmartCitizen.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.priyanka.SmartCitizen.activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.priyanka.SmartCitizen.activity.GrievancePostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.priyanka.SmartCitizen.activity.GrievanceStatusActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.example.priyanka.SmartCitizen.activity.EventDetailActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>